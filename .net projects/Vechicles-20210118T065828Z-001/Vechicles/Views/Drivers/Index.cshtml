@using Vechicles.Entities;
@{
    Layout = "~/Views/Shared/_Site.cshtml";
}

<a href="/Drivers/Create">New</a>
<fieldset>
    <legend>My Driver Lists</legend>

    <div class="grid">
        <div class="row">
            <div class="col-1 bold">Name</div>
            <div class="col-1 bold">Age</div>
            <div class="col-1 bold">DrivingLicence</div>
            <div class="col-1 bold"></div>
        </div>
        @foreach (var item in (List<Driver>)ViewData["items"])
        {
            <div class="row">
                <div class="col-1">@item.Name</div>
                <div class="col-1">@item.Age</div>
                <div class="col-1">@item.DrivingLicence</div>
                <div class="col-3">

                    <a href="/Drivers/Edit?id=@item.Id">edit</a>
                    <a href="/Drivers/Delete?id=@item.Id">delete</a>
                </div>
            </div>
        }
    </div>

</fieldset>