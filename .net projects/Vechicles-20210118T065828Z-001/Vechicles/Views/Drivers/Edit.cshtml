@model Vechicles.ViewModels.Drivers.EditVM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Site.cshtml";
}

<fieldset>
    <legend>Edit Driver</legend>

    <form action="/Drivers/Edit" method="post">
        @Html.HiddenFor(m => m.Id)
        <div class="grid">
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Name)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Name)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Name)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Age)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Age)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Age)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.DrivingLicence)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.DrivingLicence)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.DrivingLicence)
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <input class="right" type="submit" value="Save" />
                </div>
            </div>
        </div>
    </form>
</fieldset>



