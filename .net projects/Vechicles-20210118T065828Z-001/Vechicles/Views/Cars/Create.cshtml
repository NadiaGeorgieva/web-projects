@model Vechicles.ViewModels.Cars.CreateVM

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Site.cshtml";
}

<fieldset>
    <legend>Create Car</legend>

    <form action="/Cars/Create" method="post">
        <div class="grid">
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Brand)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Brand)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Brand)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.Color)
                </div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Color)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.Color)
                </div>
            </div>
            <div class="row">
                <div class="col-1">
                    @Html.LabelFor(m => m.FullDescription)
                </div>
                <div class="col-2">
                    @Html.TextAreaFor(m => m.FullDescription)
                </div>
                <div class="col-2">
                    @Html.ValidationMessageFor(m => m.FullDescription)
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <input class="right" type="submit" value="Save" />
                </div>
            </div>
        </div>
    </form>
</fieldset>

